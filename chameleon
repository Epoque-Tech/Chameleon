#!/bin/bash
source bin/chameleon-install.bash import
CMD=$1


main()
{
    if [ "$CMD" == "setup" ]; then
        setup
    elif [ "$CMD" == "vhost" ]; then
        create_vhost
    else
        usage
    fi
}


usage()
{
    echo "usage: chameleon [command]"
    echo ""
    echo "commands"
    echo "setup: setup a new project"
}


setup()
{
    index
    views
    config
    logs
    composer
    perms
}


index()
{
    if [ ! -f "index.php" ]; then
        cp conf/index.php .
    fi
}


views()
{
    if [ ! -d "views" ]; then
        mkdir views
    fi
}


config()
{
    if [ ! -f "config.php" ]; then
        cp conf/config.php .
    fi
}


logs()
{
    if [ ! -d "log" ]; then
        mkdir log
    fi

    for f in chameleon.log access.log; do
        if [ ! -f "log/$f" ]; then
            touch "log/$f"
        fi
    done
}


composer()
{
    if [ ! -f "composer.json" ]; then
        cp conf/composer.json .
    fi

    ./composer.phar update
}


perms()
{
    sudo chgrp -R $www_group .
    sudo chmod g+rwx .
    sudo chmod g+s .
}

create_vhost()
{
    gather_info
}


main

